                                                        "type": "object"
                                                    }
                                                },
                                                "total_pages": {
                                                    "type": "integer",
                                                    "example": 4
                                                },
                                                "current_page": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "hasMorePages": {
                                                    "type": "boolean",
                                                    "example": true
